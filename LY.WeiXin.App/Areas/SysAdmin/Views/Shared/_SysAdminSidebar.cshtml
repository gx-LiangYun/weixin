    <script type="text/javascript">
        try { ace.settings.check('sidebar', 'collapsed') } catch (e) { }

        //------------------------------ 
        // 侧边栏子菜单项被点击
        //------------------------------ 
        function submenuClickHandle(submenuLink)
        {
            showProgress();
            var menu = $(submenuLink);
            var menuGroupText = menu.closest("li.open").find("span.menu-text").text()
            var menuText = $.trim(menu.text());
            $("#menuGroupTextbox").text(menuGroupText);
            $("#menuTextbox").text(menuText);
            var txt = menuGroupText + " > " + menuText;
            //$("ul.breadcrumb li.active").text(txt);
            $("#friendyTips").text(txt);

            var href = menu.attr("href");
            $.get(href, {}, function (data) {
                closeProgress();
                $("#contentBox").html(data);
            }, 'html');
            return false;
        }
        //------------------------------ 
        //显示异步加载的滚动条
        //------------------------------ 
        function showProgress()
        {
            $('#myModal').on('hidden.bs.modal', function (e) {
                closeProgress();
            })
            $('#myModal').modal();
            var initWidth = 1;
            window.mytimer = setInterval(function () {
                if (initWidth > 100) {
                    initWidth = 1;
                }
                $('div.progress-bar').css('width',(initWidth++) + '%');
            }, 300);
        }
        //------------------------------ 
        // 关闭滚动条
        //------------------------------ 
        function closeProgress()
        {
            $('#myModal').modal('hide');
            clearInterval(window.mytimer);
            $('div.progress-bar').css('width', '0%');
        }

    </script>
